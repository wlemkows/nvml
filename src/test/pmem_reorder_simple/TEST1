#
# src/test/pmem_reorder_simple/TEST1 -- unit test for the reordering script
#

# standard unit test setup
. ../unittest/unittest.sh

# doesn't make sense to run in local directory
require_fs_type pmem non-pmem
require_build_type debug
# pmreorder tool does not support unicode yet
require_no_unicode
require_test_type medium
configure_valgrind pmemcheck force-enable

setup

rm -f outfile$UNITTEST_NUM.log
# create holey file
truncate -s 4M $DIR/testfile1

PROGR="./pmem_reorder_simple$EXESUFFIX"
CMD="$PROGR g $DIR/testfile1"

do_reorder_test $DIR/testfile1 "$CMD" "outfile$UNITTEST_NUM.log" prog $PROGR \
	"c"

check

pass
